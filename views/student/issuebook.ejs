<% layout('layout/boilerplate.ejs') -%>
<h1>ISSUE BOOK</h1>
<%- include("../includes/flash.ejs")  %>
    <div id="form" class="col-6 offset-3 mt-4 mb-5">
      <form method="post" action="/Admin/<%=id%>/book-request" novalidate class="needs-validation">
        <div class="ID">
            <div class="libraryid col-6">
                <label class="form-label">Library ID :</label>
                <input type="text" name="libraryid" id="libraryid" placeholder="Enter your Library ID" class="form-control" required>
                <div class="invalid-feedback">
                    Please provide a Valid Library ID
                  </div>
            </div>
            <div class="bookid col-5 offset-1">
                <label class="form-label ">Book ID :</label>
                <input type="text" id="bookid" placeholder="Enter Book ID" name="bookid" class="form-control" required>
                <div class="invalid-feedback">
                    Please provide a Valid Book ID
                  </div>
              </div>
        </div>
        
        <br>
        <div class="studentname">
            <label for="" class="form-label">Student Name:</label>
            <input type="text" id="studentname" name="username" placeholder="Enter your name" class="form-control" required>
            <div class="invalid-feedback">
                Please provide a Valid Student Name
              </div>
            
        </div>
        <br>
        <div class="branch-part">
          <Label class="form-label">Branch :</Label>
          <select name="branch" id="branch" class="form-control">
            <option value="Information Technology">
              Information Technology
            </option>
            <option value="Computer Science And Engineering">
              Computer Science and Engineering
            </option>
            <option value="Mechanical Engineering">
              Mechanical Engineering
            </option>
            <option value="Civil Engineering">Civil Engineering</option>
            <option value="Electronics And Communication Engineering">
              Electronics and Communication Engineering
            </option>
          </select>
        </div>
       <br>
        <div class="bookname">
          <label class="form-label">Book Name :</label>
          <input type="text" name="bookname" id="bookname" placeholder="Enter Book Name" class="form-control" required>
          <div class="invalid-feedback">
            Please provide a Valid Book Name
          </div>
        </div>
        <br>
        <div class="date">
            <div class="issuedate col-5">
                <label class="form-label">Issue Date :</label>
                <input type="date" id="issuedate" name="issuedate" class="form-control" id="" required>
                <div class="invalid-feedback">
                  Please provide a Valid Book Issue Date
                </div>
              </div>
              <div class="returndate col-6 offset-1">
                <label class="form-label">Return Date :</label>
                <input type="date" id="returndate" name="returndate" id="returndate" class="form-control" required>
                <div class="invalid-feedback">
                  Please provide a Valid Return Date
                </div>
              </div>
        </div>
        <br>
        <div class="button">
          <button class="btn btn-dark">REQUEST</button>
        </div>
      </form>
    </div>
  </body>
</html>
