<% layout('layout/boilerplate2.ejs') -%>
<div class="books">
<h1>Rejected Books</h1>
    <table>
        <tr>
            <th class="bookid">Rejected ID</th>
            <th class="bookname">Library ID</th>
            <th class="Author">Student Name</th>
            <th class="isbn">Branch</th>
            <th class="edition">Book Name</th>
            <th class="delete">Book ID</th>
            <th class="delete">Issue Date</th>
            <th class="delete">Return Date</th>
        </tr>
        <% for(Rejected of rejected){ %>
            <tr>
                <td class="column1">
                 <%= Rejected.id  %> 
                </td>
                <td class="column2">
                    <%= Rejected.Libraryid  %>  
                </td>
                <td class="column3">
                    <%= Rejected.Studentname  %> 
                </td>
                <td class="column3">
                    <%= Rejected.Branch  %> 
                </td>
                <td class="column3">
                    <%= Rejected.Bookname  %> 
                </td>
                <td class="column3">
                    <%= Rejected.Bookid  %> 
                </td>
                <td class="column3">
                    <%= Rejected.Issuedate %> 
                </td>
                <td class="column3">
                    <%= Rejected.Returndate  %> 
                </td>
                
            </tr>
        <% } %>
    </table>
</div>
</body>
</html>